#!/bin/sh

if [ ! -d ${HOME}/.docker_registry ]; then
    mkdir ${HOME}/.docker_registry
fi

DOCKER=`which docker`
REGISTRY_PORT='10000'

${DOCKER} run -d -p ${REGISTRY_PORT}:5000 \
                 -e REGISTRY_STORAGE_FILESYSTEM_ROOTDIRECTORY=/var/lib/registry \
                 -v "${HOME}/.docker_registry":/var/lib/registry \
                 --name my_registry --restart=always registry:2.0.1
